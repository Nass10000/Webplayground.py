# Variables de entorno para Web Playground
# Copia este archivo como .env y completa los valores

# Configuración básica
DEBUG=False
SECRET_KEY=tu-clave-secreta-aqui
ALLOWED_HOSTS=localhost,127.0.0.1,.yourdomain.com

# Base de datos (PostgreSQL)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=tu_nombre_de_base_de_datos
DATABASE_USER=tu_usuario
DATABASE_PASSWORD=tu_contraseña
DATABASE_HOST=tu_host
DATABASE_PORT=5432

# Configuración de email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.tu-proveedor.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email
EMAIL_HOST_PASSWORD=tu_contraseña

# Configuraciones de seguridad (para producción establecer en True)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Contenido de muestra
SAMPLE_TITLE="Lorem Ipsum Dolor Sit Amet"
SAMPLE_DESCRIPTION="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."

# Credenciales del administrador (para creación automática)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@webplayground.com
ADMIN_PASSWORD=admin123456
